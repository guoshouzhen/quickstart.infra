{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "NLogConfig": {
    "LogPath": "D:\\JavaAppLogs\\QuickStartDemo",
    "ConfigFileRelativePath": "Configs/nlog.config",
    //日志级别（Debug Info Error）
    "LogLevel": "Debug"
  },
  "RedisCluster": {
    //密码
    "Password": "I2yUjDtmpC49DovW",
    //集群节点
    "EndPoints": [
      "10.100.6.222:7000",
      "10.100.6.222:7001",
      "10.100.6.222:7002",
      "10.100.6.222:7003",
      "10.100.6.222:7004",
