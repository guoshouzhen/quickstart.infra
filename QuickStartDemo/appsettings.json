  "RabbitMq": {
    "Producer": {
      "Servers": {
        "EndPoints": [
          {
            "Host": "127.0.0.1",
            "Port": 5672,
            //ssl配置
            "Ssl": {
              //是否启用ssl认证，默认false
              "Enable": false,
              //证书服务器名
              "ServerName": "",
              //证书路径
              "CertificatePath": "",
              //证书密钥
              "CertificatePassphrase": "",
              //AcceptablePolicyErrors
              "SslPolicyErrors": ""
            }
          }
        ],
        "UserName": "root",
        "PassWord": "root",
        "VirtualHost": "/",
        "ClientProvidedName": "my-test",
        //是否启用断开时自动重连（默认true）
        "AutomaticRecoveryEnabled": true,
        //是否启用拓扑重连（默认true）
        "TopologyRecoveryEnabled": true,
        //连接丢失时，尝试重连的延时（秒）
        "RequestedConnectionTimeout": 60,
        //心跳间隔（秒）
        "RequestedHeartbeat": 60,
        //启动时重连次数
        "InitialConnectRetries": 5,
        //启动时重连间隔，毫秒
        "InitialConnectRetryTimeInterval": 500
      },
      //交换机及队列，程序启动时会根据配置进行检查或者自动创建
      "Exchanges": [
        {
          "Name": "EHIRE_EXCHANGE_TALENT_MYSQL",
          //是否启用自动创建
          "AutoCreateEnabled": true,
          "Settings": {
            //类型 direct fanout topic
            "Type": "direct",
            "Durable": true,
            "AutoDelete": false,
            "DisableAutoAck": true,
            //交换机额外参数
            "Arguements": []
          },
          "Queues": [
            {
              "Name": "direct_queue_1",
              "RoutingKeys": [
                "rl.direct"
              ],
              //是否启用自动创建
              "AutoCreateEnabled": true,
              //需要自动创建时需要指定队列相关配置
              "Settings": {
                "Durable": true,
                "Exclusive": false,
                "AutoDelete": false,
                //队列额外参数
                "Arguements": [
                  //设置队列中消息的过期时间（单条消息也可以指定，任意一个时间到期则过期，要是配置了死信交换机则投递到死信交换机，
                  //再根据原始routekey路由到绑定的队列中；未配置死信交换机则到期消息直接丢弃）
                  "x-message-ttl:50000",
                  "x-dead-letter-exchange:dead_exchange_name"
                ]
              }
            }
          ]
        },
        //不需要交换机的队列定义
        {
          "Name": "",
          "Queues": [
            {
              "Name": "delay_queue",
              //是否启用自动创建
              "AutoCreateEnabled": true,
              //需要自动创建时需要指定队列相关配置
              "Settings": {
                "Durable": true,
                "Exclusive": false,
                "AutoDelete": false,
                //队列额外参数
                "Arguements": [
                  //设置队列中消息的过期时间（单条消息也可以指定，任意一个时间到期则过期，要是配置了死信交换机则投递到死信交换机，
                  //再根据原始routekey路由到绑定的队列中；未配置死信交换机则到期消息直接丢弃）
                  "x-message-ttl:2000",
                  "x-dead-letter-exchange:dead_exchange_name"
                ]
              }
            }
          ]
        }
      ]
    }
  }
}
